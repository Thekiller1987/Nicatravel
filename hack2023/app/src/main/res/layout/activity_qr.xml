<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mun"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnScanner"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="215dp"
        android:layout_height="56dp"
        android:backgroundTint="#C54923"
        android:text="Scaneame!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="334dp"
        android:layout_height="390dp"
        app:layout_constraintBottom_toTopOf="@+id/btnScanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr" />

    <Button
        android:id="@+id/btnToggleFlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encender Flash"
        app:layout_constraintTop_toBottomOf="@+id/btnScanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="218dp"
        android:layout_height="57dp"
        android:text="NicaTravel"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="-11dp" />
</androidx.constraintlayout.widget.ConstraintLayout>